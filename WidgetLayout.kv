<LayoutAssignment>:
    orientation: 'vertical'
    spacing: '15dp'
    padding: '15dp'

    Label:
        text: 'Kivy Layout'
        size_hint: 1, .25
        color: (0,0,0,1)
        font_size: 50
        background_color: (1,1,1,1)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        spacing: '5dp'
        orientation: 'horizontal'
        BoxLayout:
            spacing: '5dp'
            orientation:'horizontal'
            Button:
                text: "Button A"
                background_color: .85,.4,.8,1
            Button:
                text: "Button B"
                background_color: .85,.4,.8,1
        BoxLayout:
            spacing: '5dp'
            orientation: 'vertical'
            Button:
                text: 'Button C'
                background_color: .48,.635,1,1
