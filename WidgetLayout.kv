BoxLayoutExample



<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: "Button A"
        background_color: 1, 0, 0, 1
        size_hint: 0.5,1
    Button:
        text: "Button B"
        background_color: 0, 1, 0, 1
        size_hint: 2,1
    Button:
        text: "Button C"
        background_color: 0, 0, 1, 1
        size_hint: 0.5, 0.5
        # horizontal positions: x(left), center_x, right
        # vertical positions: y(bottom), center_y, top
        pos_hint: {"center_y":1}



<MainWidget>
    Button:
        text: "Button A"
        size: "200dp" , "200dp"
        pos: "500dp" , "500dp"
        background_color: 0.6, 0.9, 0.4, 1
        color: 0.5, 0.0, 0.9, 1

    Label:
        text: "Label A"
